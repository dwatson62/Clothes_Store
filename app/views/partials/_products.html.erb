<div id='product-list'>
  <h3><%= @products.first.category %></h3>

  <% @products.each do |product| %>
    <b><%= product.name %></b>
    <br>
    <% if product.old_price %>
      Was <strike><%= number_to_currency(product.old_price) %></strike>
      Now
    <% end %>
    <%= number_to_currency(product.price) %>
    <br>
    <% if product.quantity < 1 %>
    <br>
      Out of Stock
    <% else %>
    <br>
      <%= form_for [@order, product] do |f| %>
        <%= f.submit 'Add to cart' %>
      <% end %>
    <% end %>
    <br>
    <br>
  <% end %>
</div>
