<% @products.each do |product| %>
  <li> <%= product.name %> - <%= product.category %>
    <%= form_for [@order, product] do |f| %>
      <br>
      <%= f.submit 'Add to cart' %>
    <% end %> </li>
    <br>
<% end %>
<br>
<br>
<h3>Shopping cart:</h3>
<br>
<br>
<% if @order.products.length > 0 %>
  <% @order.products.each do |product| %>
    <li> <%= product.name %> <%= link_to 'Remove item', order_product_path(@order, product), method: :delete %></li>
  <% end %>
  Total: <%= @total %>
<% else %>
  Empty!
<% end %>
